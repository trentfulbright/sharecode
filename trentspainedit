public class trentspaint extends JFrame {
    ArrayList<Point> points = new ArrayList<Point>();
    JPanel leftPanel = new JPanel();
    JPanel artPanel = new JPanel();
    JPanel colorButtons = new JPanel();
    JPanel testpanel = new JPanel();
    ButtonGroup penSize = new ButtonGroup();
    JRadioButton smallSize = new JRadioButton();
    JRadioButton mediumSize = new JRadioButton();
    JRadioButton largeSize = new JRadioButton();
    private int size = 0;
    private int mouseX;
    private int mouseY;
    Color cl = Color.BLACK;
    
    
    public trentspaint(){
     setTitle("trentspaint");
     setLayout(new FlowLayout());
     setSize(new Dimension(700,700));     
     setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
     setArtPanel();
     setLeftPanel(); 
     setSizeButtons();
     initGUI();
     add(leftPanel);
     add(artPanel);
     setVisible(true);
     
     
     
     
     
    }
    public void initGUI(){
        artPanel.addMouseMotionListener(new MouseMotionAdapter(){
            public void mouseDragged(MouseEvent e){
                //Rectangle2D.Double rect = new Rectangle2D.Double(e.getX(), e.getY(), 100, 100);
 
                //g2D.fill(rect);
                points.add(new Point(e.getX(), e.getY()));
                System.out.println(e.getX() + ", " + e.getY());
                artPanel.add(new DrawingPanel());
                
                
                
            }
        });
           smallSize.addActionListener(new ActionListener(){
	public void actionPerformed(ActionEvent e){
		//.setStroke(new BasicStroke(1));
                size = 1;
                System.out.print("Size = 1 ");
	}
});
        mediumSize.addActionListener(new ActionListener(){
	public void actionPerformed(ActionEvent e){
		//g2D.setStroke(new BasicStroke(2));
                System.out.print("Size = 2 ");
	}
});
        largeSize.addActionListener(new ActionListener(){
	public void actionPerformed(ActionEvent e){
		//g2D.setStroke(new BasicStroke(3));
                System.out.print("Size = 3 ");
	}
});
    }
    public static void main(String[] args) {
        new trentspaint();
    }

    
    
    private class DrawingPanel extends JPanel{    
        public DrawingPanel(){
        setPreferredSize(new Dimension(400, 400));
        }
        public void paintComponent(Graphics g){            
           super.paintComponent(g); 
           
           Graphics2D g2D = (Graphics2D)g;
           g2D.setStroke(new BasicStroke(10));
           g2D.setPaint(Color.BLACK);
           g2D.drawLine(60, 76, 331, 351);
           
           for(int i = 0; i<points.size(); i++){
               Rectangle2D.Double rect = new Rectangle2D.Double(points.get(i).xpos, points.get(i).ypos, size, size);
               g2D.fill(rect);
               
               
           }
           
           
       }
        
            
        
    
    }
    public class Point{
        int xpos;
        int ypos;
        public Point(int x, int y){
            this.xpos = x;
            this.ypos = y;
        }
        public int getX(){
            return xpos;
        }
        public int getY(){
            return ypos;
        }
    }
    public void setLeftPanel(){
        leftPanel.setPreferredSize(new Dimension(100, 50));
        leftPanel.setBorder(BorderFactory.createTitledBorder("Size"));
        leftPanel.add(smallSize);
        leftPanel.add(mediumSize);
        leftPanel.add(largeSize);
        
        
    }
    public void setArtPanel(){
       
        
        artPanel.add(new DrawingPanel());
        artPanel.setPreferredSize(new Dimension(400, 400));
        artPanel.setBorder(BorderFactory.createLineBorder(Color.BLACK));
        
     }
    
    public void setSizeButtons(){
        penSize.add(smallSize);
        penSize.add(mediumSize);
        penSize.add(largeSize);
      //  smallSize.addActionListener(new ActionListener(){
